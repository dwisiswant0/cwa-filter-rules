{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Common Web Attack threat rules",
  "type": "object",
  "properties": {
    "filters": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "rule": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "impact": {
            "type": "number"
          },
          "pcre": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "rule",
          "description",
          "impact",
          "pcre"
        ]
      }
    }
  },
  "required": [
    "filters"
  ]
}